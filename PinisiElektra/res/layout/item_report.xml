<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <LinearLayout
        android:id="@+id/linearPenjualan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <!-- <TextView
            android:id="@+id/txtIdPenjualan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Id" /> -->
        
        <TextView
            android:id="@+id/txtKodeBarangPenjualan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:typeface="serif"
            android:layout_weight="1"
            android:text="Kode Barang" />

        <TextView
            android:id="@+id/txtTglTransaksiPenjualan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:typeface="serif"
            android:layout_weight="1"
            android:text="Tgl Transaksi" />
        
        <TextView
            android:id="@+id/txtSatuanPenjualan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Satuan" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearPembelian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/txtKodeBarangPembelian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Kode Barang" />

        <TextView
            android:id="@+id/txtSatuanPembelian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Satuan" />

        <TextView
            android:id="@+id/txtKodeDistributorPembelian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Kode Distributor" />

        <TextView
            android:id="@+id/txtTglTrxPembelian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Tanggal Transaksi" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/txtNamaBarangInventory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:text="Inventory" />

        <TextView
            android:id="@+id/txtSatuanInventory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:text="Satuan" />

        <TextView
            android:id="@+id/txtHargaBeliInvetory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:text="Harga Beli" />

        <TextView
            android:id="@+id/txtHargaJualInvetory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:text="Harga Jual" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearPelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <!-- <TextView
            android:id="@+id/txtIdPelanggan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:text="Id" /> -->

        <TextView
            android:id="@+id/txtNamaPelanggan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:text="Nama" />

        <TextView
            android:id="@+id/txtAlamatPelanggan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:text="Alamat" />

        <TextView
            android:id="@+id/txtPhonePelanggan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:text="Phone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearDistributor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/txtKodeDistributor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:text="Kode Distributor" />

        <TextView
            android:id="@+id/txtNamaDistributor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:text="Nama" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearMerchant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <!-- <TextView
            android:id="@+id/txtMerchantId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:text="Merchant Id" /> -->

        <TextView
            android:id="@+id/txtMerchantName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:text="Nama" />
        
        <TextView
            android:id="@+id/txtMerchantAddr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:typeface="serif"
            android:layout_weight="1"
            android:text="Alamat" />
    </LinearLayout>    

</LinearLayout>